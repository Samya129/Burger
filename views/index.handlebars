<div class="jumbotron">
  <h2 class="display-4">Hello, what would you like to order?</h2>
  <h10>Please type a burger from the menu above</h10>
  <br>
  <form id="create-form">
    <div class="form-group">
      <input type="text" id="bur" name="name">
      <button type="submit">Order Up!</button>
    </div>
  </form>
</div>
<div class="container">
<div class="burgerContainer">
  <div class="row">
    <div class="devouredContainer">
      <h2 class="subTitles">Burger Orders: <b>READY!</b></h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <img class="rounded mx-auto d-block text-center" src="/assets/images/burger.png" alt="Burger Image">
    <div class="notDevouredContainer">
      <h2 class="subTitles"><b>Devoured Burgers:</b></h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  </div>
</div>