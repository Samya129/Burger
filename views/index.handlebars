<div class="jumbotron">
  <h2 class="display-4">Hello, what would you like to order?</h2>
  <h10>Please type a burger from the menu above</h10>
  <br>
  <form id="create-form">
    <div class="form-group">
      <input style="height: 36px;" type="text" id="bur" name="name">
      <button class="btn btn-danger" type="submit">Order Up!</button>
    </div>
  </form>
</div>

<div class="container">
  <div class="burgerContainer">
    <div class="row">
      <div class="col-md-4">
        <h2 class="subTitles"><b>READY </b>Orders: </h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4">
        <img class="rounded mx-auto d-block" src="/assets/images/burger.png" alt="Burger Image">
      </div>
      <div class="col-md-4">
        <h2 class="subTitles">Devoured Burgers:</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>